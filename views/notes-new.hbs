<main>
    <header>
        <h1>Neue ToDo</h1>
    </header>
    <section class="content">
        <form method="POST">
            <label>
                <span>Titel</span>
                <input type="text" name="title" placeholder="Title" required autofocus />
            </label>
            <label>
                <span>Beschreibung</span>
                <textarea name="description" id="description" placeholder="Beschreibung" required></textarea>
            </label>

            <label>
                <span>Wichtigkeit</span>
                <input type="range" min="1" max="5" step="1" placeholder="1-5" name="rating" id="rating" required />
            </label>

            <label>
                <span>Fertig bis</span>
                <input type="date" name="dueDate" id="due-date" placeholder="DD/MM/YYYY" required />
            </label>

            <label>
                <span>Erledigt</span>
                <input type="checkbox" name="finished" />
            </label>

            <button type="submit">Anlegen</button>
            <a href="" class="button">Abbrechen</a>
        </form>
    </section>
</main>
