<main>
    <header>
        <h1>ToDo Ã¤ndern</h1>
    </header>
    <section class="content">
        <form method="POST">
            <label>
                <span>Titel</span>
                <input type="text" name="title" placeholder="Title" value="{{title}}" required autofocus />
            </label>
            <label>
                <span>Beschreibung</span>
                <textarea name="description" placeholder="Beschreibung" value="{{description}}" required></textarea>
            </label>
            <label>
                <span>Wichtigkeit</span>
                <input type="range" min="0" max="5" step="1" name="importance" value="{{importance}}" required />
            </label>
            <label>
                <span>Fertig bis</span>
                <input type="date" name="dueDate" placeholder="DD/MM/YYYY" pattern="([0-9]?[1-9])/([0-9]?[1-9])/([1-9]){4}" value="{{dueDate}}" required />
            </label>
            <label>
                <input type="checkbox" name="finished" />
                <span>Erledigt</span>
            </label>

            <div class="handles">
                <button type="submit">Speichern</button>
                <a href="" class="button">Abbrechen</a>
            </div>
        </form>
    </section>
</main>