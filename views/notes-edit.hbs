<main>
    <head>
        <h1>ToDo Ã¤ndern</h1>
    </head>
    <section class="content">
        <form method="POST">
            <label>
                <span>Titel</span>
                <input type="text" name="title" placeholder="Title" value="{{title}}" required autofocus />
            </label>
            <label>
                <span>Beschreibung</span>
                <textarea name="description" placeholder="Beschreibung" value="{{description}}" required></textarea>
            </label>
            <label>
                <span>Wichtigkeit</span>
                <input type="range" min="1" max="5" step="1" name="importance" value="{{importance}}" required />
            </label>
            <label>
                <span>Fertig bis</span>
                <input type="date" name="dueDate" placeholder="DD/MM/YYYY" value="{{dueDate}}" required />
            </label>
            <label>
                <span>Erledigt</span>
                <input type="checkbox" name="finished" />
            </label>
            <button type="submit">Speichern</button>
            <a href="" class="button">Abbrechen</a>
        </form>
    </section>
</main>